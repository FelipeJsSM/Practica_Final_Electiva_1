<h1>Mantenimiento de Autor</h1>

<div class="row mt-2 mb-2">
  <div class="col-12 col-sm-4">
    <a href="/author/create" class="btn btn-success">Agregar Autor</a>
  </div>
</div>

<hr>

{{#if authors}}
<div class="row">
  {{#each authors as |author|}}
  <div class="col-12 col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Autor: {{author.name}}</h5>
        <p class="card-text">Email: {{author.email}}</p>
        <p class="card-text">Libros: {{author.books.length}}</p>
      </div>
      <div class="mb-2 text-center">
        <a href="/author/edit/{{author.id}}?edit=true" title="Edit" class="btn btn-primary float-end">Editar</a>
        <form method="post" action="/author/delete/:authorId" class="form-delete">
          <input type="hidden" name="authorId" value="{{author.id}}">
          <button type="submit" class="btn btn-danger float-end me-2 delete-author" title="Delete">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h3 class="mt-3 text-center">No hay Autores registradas</h3>
{{/if}}
