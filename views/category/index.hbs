<h1>Mantenimiento de Categorias</h1>

<div class="row mt-2 mb-2">
  <div class="col-12 col-sm-4">
    <a href="/category/create" class="btn btn-success">Agregar Categoria</a>
  </div>
</div>

<hr>

{{#if categories}}
<div class="row">
  {{#each categories as |category|}}
  <div class="col-12 col-sm-4">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Categoria: {{category.name}}</h5>
        <p class="card-text">Descripcion: {{category.description}}</p>
        <p class="card-text">Libros: {{category.books.length}}</p>
      </div>
      <div class="mb-2 text-center">
        <a href="/category/edit/{{category.id}}?edit=true" title="Edit" class="btn btn-primary float-end">Editar</a>
        <form method="post" action="/category/delete/:categoryId" class="form-delete">
          <input type="hidden" name="categoryId" value="{{category.id}}">
          <button type="submit" class="btn btn-danger float-end me-2 delete-category" title="Delete">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h3 class="mt-3 text-center">No hay Categorias registradas</h3>
{{/if}}
