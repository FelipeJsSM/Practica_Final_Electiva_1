<div class="row">
    <div class="col-12 col-sm-6 offset-sm-3">
        <div class="card">
            <div class="card-header bg-primary text-light">
                {{#if editMode}}Editar Region{{else}}Crear Region{{/if}}
            </div>
            <div class="card-body">
                <form class="form-submit-category" method="POST" action="/category/{{#if editMode}}edit{{else}}create{{/if}}">

                    {{#if editMode}}
                    <input type="hidden" name="id" value="{{category.id}}">
                    {{/if}}


                    <div class="mb-3">
                        <label for="name" class="form-label">Name:</label>
                        <input type="text" id="name" class="form-control" name="name" {{#if editMode}}value="{{category.name}}"{{/if}} />
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description:</label>
                        <textarea name="description" id="description" class="form-control" maxlength="500" rows="3">{{#if editMode}}{{category.description}}{{/if}}</textarea>
                    </div>

                    <button type="submit" class="btn btn-primary float-end">Guardar</button>
                    <a href="/category/" class="btn btn-warning float-end me-2">Volver</a>
                </form>
            </div>
        </div>
    </div>
</div>