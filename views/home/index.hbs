<h1>Lista de Libros</h1>

<form method="POST" action="/">
    <div class="row mb-3">
        <div class="col-12 col-sm-4">
            <label for="bookTitle" class="form-label">Buscar por nombre:</label>
            <input type="text" class="form-control" id="bookTitle" name="bookTitle" value="{{bookTitle}}" />
        </div>

        {{#if categories}}
        <div class="col-12 col-sm-4">
            <label class="form-label">Filtrar por categor√≠a:</label>
            <div class="overflow-auto border rounded p-2" style="max-height: 200px;">
                {{#each categories as |category|}}
                <div class="form-check mb-1">
                    <input class="form-check-input" type="checkbox" name="categoriesId" value="{{category.id}}"
                        id="category-{{category.id}}" />
                    <label class="form-check-label" for="category-{{category.id}}">{{category.name}}</label>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}

        <div class="col-12 col-sm-4 mt-4">
            <button type="submit" class="btn btn-primary mt-2">Buscar</button>
        </div>
    </div>
</form>

<hr />


{{#if books}}
<div class="row">
    {{#each books as |book|}}
    <div class="col-12 col-sm-4">
        <div class="card mb-3">
            <img src="{{book.imagePath}}" class="img-fluid" style="width: 415px; height: 250px;"/>
            <div class="card-body">
                <h5 class="card-title">Nombre: {{book.title}}</h5>
                <p class="card-text">Categoria: {{book.category.dataValues.name}} - Editorial:
                    {{book.editorial.dataValues.name}}</p>
                <p class="card-text">Publicado: {{book.published}} - Autor:
                    {{book.author.dataValues.name}}</p>
                <a href="/detail/{{book.id}}" class="icon-link gap-1 icon-link-hover stretched-link">
                    Mas detalles
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{else}}
<h1>No se encontraron Libros</h1>
{{/if}}