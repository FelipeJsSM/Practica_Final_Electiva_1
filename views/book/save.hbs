<div class="row">
    <div class="col-12 col-sm-6 offset-sm-3">
        <div class="card">
            <div class="card-header bg-primary">
                <div class="card-body bg-light rounded">
                    {{#if categories}}
                    {{#if authors}}
                    {{#if editorials}}
                    {{#if editMode}}Editar Libro{{else}}Crear Libro{{/if}}
                    <form enctype="multipart/form-data" method="POST"
                        action="/book/{{#if editMode}}edit{{else}}create{{/if}}" class="form-submit-book">
                        <div class="mb-3">
                            <label for="title" class="form-label">Nombre:</label>
                            <input type="text" class="form-control" id="title" name="title" {{#if
                                editMode}}value="{{book.title}}" {{/if}} />
                        </div>

                        <div class="mb-3">
                            <label for="image" class="form-label">Imagen:</label>
                            <input type="file" id="image" class="form-control" name="image" />
                        </div>

                        <div class="mb-3">
                            <label for="published" class="form-label">Publicado:</label>
                            <input type="number" id="published" class="form-control" name="published" min="1600"
                                max="2099" step="1" {{#if editMode}}value="{{book.published}}" {{/if}} />
                        </div>

                        <div class="mb-3">
                            <label for="categoryId" class="form-label">Category:</label>
                            <select id="categoryId" name="categoryId" class="form-select">
                                <option value="">Select a category</option>
                                {{#each categories as |category|}}
                                <option value="{{category.id}}" {{#if ../editMode}} {{#if (SameValue category.id
                                    ../book.categoryId)}} selected {{/if}} {{/if}}>{{category.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="authorId" class="form-label">Author:</label>
                            <select id="authorId" name="authorId" class="form-select">
                                <option value="">Select an author</option>
                                {{#each authors as |author|}}
                                <option value="{{author.id}}" {{#if ../editMode}} {{#if (SameValue author.id
                                    ../book.authorId)}} selected {{/if}} {{/if}}>{{author.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="mb-3">
                            <label for="editorialId" class="form-label">Editorial:</label>
                            <select id="editorialId" name="editorialId" class="form-select">
                                <option value="">Select an editorial</option>
                                {{#each editorials as |editorial|}}
                                <option value="{{editorial.id}}" {{#if ../editMode}} {{#if (SameValue editorial.id
                                    ../book.editorialId)}} selected {{/if}} {{/if}}>{{editorial.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        {{#if editMode}}
                        <input type="hidden" name="bookId" value="{{book.id}}">
                        <img src="{{book.imagePath}}" class="rounded mx-auto d-block" alt="{{book.title}}"
                            style="width: 200px; height: 250px;" />
                        {{/if}}

                        <button type="submit" class="btn btn-outline-primary">Guardar</button>
                        <a href="/book/" class="btn btn-secondary me-2">Volver</a>
                    </form>

                    
                {{else}}
                <h5 class="my-2">No se encontraron Editoriales. Para agregar uno haga click <a
                        href="/editorial/create">aqui</a>.
                </h5>
                {{/if}}
                {{else}}
                <h5 class="my-2">No se encontraron Autores. Para agregar uno haga click <a
                        href="/author/create">aqui</a>.
                </h5>
                {{/if}}
                {{else}}
                <h5 class="my-2">No se encontraron Categorias. Para agregar uno haga click <a
                        href="/category/create">aqui</a>.
                </h5>
                {{/if}}
                </div>
            </div>
        </div>
    </div>
</div>