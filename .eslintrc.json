{
  "env": { "node": true, "es2021": true, "jest": true },
  "extends": ["eslint:recommended"],
  "parserOptions": { "ecmaVersion": 12 },
  "rules": {
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-undef": "error",
    "no-console": "off",
    "eqeqeq": "error"
  },
  "ignorePatterns": [
    "node_modules/",
    "public/",
    "database/",
    "coverage/"
  ]
}